<% @cook = Cook.find(favorite.cook_id) %>
<% user = @cook.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-cook">
    <div class="col-md-2">
      <%= link_to((image_tag @cook.picture.url), cook_path(@cook), class: 'cook-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @cook.name, cook_path(@cook) %></p>
      <p><%= @cook.description %></p>
      <p class="cook-user">cooked by <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>
